<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/aviationBackground</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
    </style>
    
    <!-- Button styles -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/aviationBlue</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/aviationLightBlue</item>
        <item name="android:textColor">@color/textLight</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="OutlineButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/aviationBlue</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Text styles -->
    <style name="HeaderText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/aviationBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="SubheaderText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/aviationBlue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
    
    <style name="BodyText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>
    
    <style name="SmallText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item>
    </style>
    
    <!-- Card styles -->
    <style name="AirportCard">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/cardBackground</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    
    <!-- Input field styles -->
    <style name="InputField" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textSecondary</item>
    </style>
</resources>
