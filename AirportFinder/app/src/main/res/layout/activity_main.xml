<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Logo -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_airplane"
            android:contentDescription="Airport Finder Logo"
            android:layout_marginBottom="16dp"
            android:scaleType="centerInside"
            android:background="@drawable/circle_background"
            android:padding="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Airport Finder"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="#2c3e50" />

        <!-- Coordinate Format Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coordinate Format"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#34495e" />

        <Spinner
            android:id="@+id/spinnerCoordinateFormat"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:layout_marginBottom="8dp" />

        <!-- Format Description -->
        <TextView
            android:id="@+id/tvFormatDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Degrees Minutes Seconds.Decimal (40Â°45'30.25&quot;N)"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginBottom="16dp"
            android:textColor="#7f8c8d" />

        <!-- DMS Format Container -->
        <LinearLayout
            android:id="@+id/layoutDMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- Latitude Input -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Latitude"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="#34495e" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/etLatDegrees"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:hint="DD"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â°"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="#2c3e50" />

                <EditText
                    android:id="@+id/etLatMinutes"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:hint="MM"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="'"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="#2c3e50" />

                <EditText
                    android:id="@+id/etLatSecondsWhole"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:hint="SS"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="#2c3e50" />

                <EditText
                    android:id="@+id/etLatSecondsDecimal"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:hint="dd"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&quot;"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="#2c3e50" />

                <TextView
                    android:id="@+id/tvLatDirection"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="N"
                    android:textStyle="bold"
                    android:background="@drawable/direction_background"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Hidden Radio Group for Latitude Direction -->
            <RadioGroup
                android:id="@+id/rgLatDirection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rbLatNorth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbLatSouth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RadioGroup>

            <!-- Longitude Input -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longitude"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="#34495e" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/etLonDegrees"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:hint="DDD"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="3"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â°"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="#2c3e50" />

                <EditText
                    android:id="@+id/etLonMinutes"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:hint="MM"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="'"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="#2c3e50" />

                <EditText
                    android:id="@+id/etLonSecondsWhole"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:hint="SS"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="."
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="#2c3e50" />

                <EditText
                    android:id="@+id/etLonSecondsDecimal"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:hint="dd"
                    android:inputType="number"
                    android:digits="0123456789"
                    android:maxLength="2"
                    android:background="@drawable/edittext_background"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="&quot;"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="#2c3e50" />

                <TextView
                    android:id="@+id/tvLonDirection"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text="E"
                    android:textStyle="bold"
                    android:background="@drawable/direction_background"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@android:color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Hidden Radio Group for Longitude Direction -->
            <RadioGroup
                android:id="@+id/rgLonDirection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rbLonEast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/rbLonWest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RadioGroup>

        </LinearLayout>

        <!-- Decimal Format Container -->
        <LinearLayout
            android:id="@+id/layoutDecimal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Latitude (Decimal Degrees)"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="#34495e" />

            <EditText
                android:id="@+id/etLatDecimal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="e.g., 40.758896"
                android:inputType="numberDecimal|numberSigned"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Longitude (Decimal Degrees)"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="#34495e" />

            <EditText
                android:id="@+id/etLonDecimal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="e.g., -73.985130"
                android:inputType="numberDecimal|numberSigned"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- GPS Format Container -->
        <LinearLayout
            android:id="@+id/layoutGPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPS Coordinates"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:textColor="#34495e" />

            <EditText
                android:id="@+id/etGPSCoordinates"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:hint="40Â°45'30.25&quot;N 73Â°58'45.75&quot;W"
                android:inputType="text"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="top"
                android:minLines="2" />

        </LinearLayout>

        <!-- ICAO Code Input Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Or Enter ICAO Code"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:textColor="#34495e" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etIcaoCode"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:hint="Enter ICAO code (e.g., KJFK)"
                android:inputType="textCapCharacters"
                android:maxLength="4"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btnAddIcao"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Add"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:background="@drawable/button_background"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <!-- Selected ICAO Codes Container -->
        <LinearLayout
            android:id="@+id/layoutSelectedIcaoCodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- This will be populated dynamically with airport bubbles -->
            <TextView
                android:id="@+id/tvNoIcaoSelected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No airports selected"
                android:textStyle="italic"
                android:textSize="12sp"
                android:textColor="#7f8c8d"
                android:layout_marginBottom="16dp" />
        </LinearLayout>

        <!-- Search Radius -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Radius (NM)"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="#34495e" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/etSearchRadius"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:hint="300"
                android:text="300"
                android:inputType="number"
                android:digits="0123456789"
                android:maxLength="3"
                android:background="@drawable/edittext_background"
                android:padding="12dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NM"
                android:textStyle="bold"
                android:layout_marginStart="8dp"
                android:textSize="16sp"
                android:textColor="#2c3e50" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Nautical Miles: 1 NM = 1.852 km)"
                android:textSize="10sp"
                android:layout_marginStart="8dp"
                android:textColor="#7f8c8d" />

        </LinearLayout>

        <Button
            android:id="@+id/btnFindAirport"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ” Find Nearest Airports"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp"
            android:elevation="2dp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter coordinates or ICAO code and tap search to find nearby airports..."
            android:textSize="14sp"
            android:background="@drawable/result_background"
            android:padding="16dp"
            android:fontFamily="monospace"
            android:minHeight="200dp" />

        <!-- Results -->
        <TextView
            android:id="@+id/tvResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="monospace"
            android:textSize="14sp"
            android:textColor="#000000" />

        <!-- Airport Cards Container -->
        <LinearLayout
            android:id="@+id/airportCardsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp" />

    </LinearLayout>
</ScrollView>
