<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- App Logo -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/app_logo"
            android:contentDescription="Airport Finder Logo"
            android:layout_marginBottom="16dp"
            android:scaleType="centerInside" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Airport Finder"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Coordinate Format Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coordinate Format"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerCoordinateFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Format Description -->
        <TextView
            android:id="@+id/tvFormatDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Degrees Minutes Seconds.Decimal (40Â°45'30.25&quot;N)"
            android:textSize="12sp"
            android:textStyle="italic"
            android:layout_marginBottom="16dp"
            android:textColor="#666666" />

        <!-- Latitude Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etLatDegrees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:hint="Deg"
                android:inputType="numberDecimal|numberSigned"
                android:maxLength="6"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/etLatMinutes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Min"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/etLatSecondsWhole"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Sec"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/etLatSecondsDecimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="Dec"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:background="@android:color/white"
                android:padding="12dp" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rgLatDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbLatNorth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N (North)"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbLatSouth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S (South)"
                android:layout_marginStart="16dp" />

        </RadioGroup>

        <!-- Longitude Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/etLonDegrees"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:hint="Deg"
                android:inputType="numberDecimal|numberSigned"
                android:maxLength="8"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/etLonMinutes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Min"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/etLonSecondsWhole"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Sec"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/etLonSecondsDecimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="Dec"
                android:inputType="numberDecimal"
                android:maxLength="6"
                android:background="@android:color/white"
                android:padding="12dp" />

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rgLonDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbLonEast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E (East)"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rbLonWest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="W (West)"
                android:layout_marginStart="16dp" />

        </RadioGroup>

        <!-- Search Radius Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search Radius (seconds)"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <EditText
                android:id="@+id/etRadiusWhole"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Whole"
                android:inputType="number"
                android:maxLength="2"
                android:background="@android:color/white"
                android:padding="12dp"
                android:layout_marginEnd="4dp" />

            <EditText
                android:id="@+id/etRadiusDecimal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:hint="Dec"
                android:inputType="number"
                android:maxLength="2"
                android:background="@android:color/white"
                android:padding="12dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnFindAirport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Nearest Airports"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Results will appear here..."
            android:textSize="14sp"
            android:background="#f5f5f5"
            android:padding="12dp"
            android:fontFamily="monospace" />

    </LinearLayout>
</ScrollView>
